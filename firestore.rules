rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Функция проверки авторизации
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Функция проверки владельца
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // ============================================
    // AI_CHATS - Чаты с AI
    // ============================================
    match /aiChats/{chatId} {
      allow read, write: if isSignedIn() && isOwner(request.resource.data.userId || resource.data.userId);
    }
    
    // ============================================
    // AI_MESSAGES - Сообщения в чатах
    // ============================================
    match /aiMessages/{messageId} {
      allow read, write: if isSignedIn() && isOwner(request.resource.data.userId || resource.data.userId);
    }

    // ============================================
    // USERS - Профили пользователей
    // ============================================
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && isOwner(userId);
    }
    
    // Разрешить всё остальное для разработки (опционально)
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
