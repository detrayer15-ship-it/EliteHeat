rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles
      allow read: if true;
      
      // Users can only write their own data
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Admins can write any user data
      allow write: if request.auth != null && 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Submissions collection
    match /submissions/{submissionId} {
      // Students can read their own submissions
      allow read: if request.auth != null && 
                     resource.data.studentId == request.auth.uid;
      
      // Admins can read all submissions
      allow read: if request.auth != null && 
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // Students can create submissions
      allow create: if request.auth != null && 
                       request.resource.data.studentId == request.auth.uid;
      
      // Admins can update submissions (for review)
      allow update: if request.auth != null && 
                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Chats collection (student-admin chats)
    match /chats/{chatId} {
      // Users can read chats they're part of
      allow read: if request.auth != null && 
                     (resource.data.studentId == request.auth.uid || 
                      resource.data.adminId == request.auth.uid);
      
      // Students can create chats
      allow create: if request.auth != null && 
                       request.resource.data.studentId == request.auth.uid;
      
      // Participants can update chats (send messages)
      allow update: if request.auth != null && 
                       (resource.data.studentId == request.auth.uid || 
                        resource.data.adminId == request.auth.uid);
    }
    
    // AI Chats collection (AI assistant chats)
    match /aiChats/{chatId} {
      // Users can only read their own AI chats
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Users can create their own AI chats
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      
      // Users can update their own AI chats (e.g., change title)
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Users can delete their own AI chats
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // AI Messages collection
    match /aiMessages/{messageId} {
      // Users can read messages from any chat they have access to
      // Security is enforced at chat level
      allow read: if request.auth != null;
      
      // Users can create messages in their own chats
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      
      // Messages cannot be updated or deleted (immutable)
      allow update, delete: if false;
    }
    
    // AI Chat Summaries collection (optional, for long conversations)
    match /aiChatSummaries/{chatId} {
      // Users can only read/write summaries for their own chats
      allow read, write: if request.auth != null && 
                            get(/databases/$(database)/documents/aiChats/$(chatId)).data.userId == request.auth.uid;
    }
  }
}
